<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SettingsExample.MainPage"
             Title="Settings Example">

    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="{AppThemeBinding Light=settings.png, Dark=settingsdark.png}" Clicked="Settings_Clicked"/>
    </ContentPage.ToolbarItems>
    <ScrollView>
        <VerticalStackLayout>
            <Grid x:Name="MainGrid" RowDefinitions="*,*,*" ColumnDefinitions="*,*,*,*" WidthRequest="300" HeightRequest="400">
                
                
            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
